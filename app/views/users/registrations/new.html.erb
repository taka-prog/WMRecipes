<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 col-xs-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mail-field">
          <h4>ユーザー名</h4>
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "form" %>
        </div>

        <div class="field">
          <h4>メールアドレス</h4>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
        </div>

        <div class="field">
          <h4>パスワード（<%= @minimum_password_length %> 文字以上）</h4>
          <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="field">
          <h4>パスワード（確認用）</h4>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="links">
        <%= render "users/shared/links" %>
      </div>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>
