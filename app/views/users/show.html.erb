<!-- ユーザ名、自己紹介文 -->
<div class="container">
	<div class="row recipe_info">
		<div class="col-xs-5">
			<%= attachment_image_tag @user, :icon, :fill, 250, 250, fallback: "no_image.jpg", size: "250x250" %>
		</div>
		<div class="col-xs-7">
			<h2>ユーザ名</h2>
			<%= @user.user_name %>
			<h2>自己紹介文</h2>
			<%= @user.profile %>
		</div>
	</div>
</div>

<!-- ユーザーが投稿したレシピ一覧部分 -->
<div class="recipes">
	<div class="container">
		<div class="row">
			<h3>このユーザが投稿したレシピ</h3>
			<% if @recipes.present? %>
				<% @recipes.each do |recipe| %>
					<% if recipe.user_id == @user.id  %>
						<div class="recipe_block col-sm-4 col-xs-12">
							<%= attachment_image_tag recipe, :cooking_image, :fill, 250, 250, fallback: "noImage.png", size: "250x250" %><br>
							<%= link_to recipe.recipe_name, show_recipe_path(recipe.id) %>
						</div>
					<% end %>
				<% end %>
			</div>
			<%= paginate @recipes, class: "pagenate" %>
		<% end %>
	</div>
</div>