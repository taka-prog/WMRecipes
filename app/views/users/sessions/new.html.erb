
<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 col-xs-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mail-field">
          <h4>メールアドレス</h4>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
        </div>

        <div class="field">
          <h4>パスワード</h4>
          <%= f.password_field :password, autocomplete: "current-password", class: "form" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label "ログインしたままにする" %>
          </div>
        <% end %>
      <% end %>
      <div class="links">
        <%= render "users/shared/links" %>
      </div>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>

